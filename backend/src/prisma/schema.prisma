generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SplitType {
  INDIVIDUAL
  BOTH
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String

  paidExpenses Expense[] @relation("PaidBy")
  expenses     Expense[] @relation("Participants")
}

model Expense {
  id        Int       @id @default(autoincrement())
  title     String
  amount    Int
  splitType SplitType
  paidById  Int
  paidBy    User      @relation("PaidBy", fields: [paidById], references: [id])
  participants User[] @relation("Participants")
  isSettlement Boolean @default(false)
  date      DateTime
  createdAt DateTime  @default(now())
}
